<% if (movies && movies.length > 0) { %>
	<% movies.forEach(movie => { %>
		<div class="movie-card" onclick="window.location.href='/series/<%= movie.id %>'">
			<img src="<%= movie.poster_url || 'https://via.placeholder.com/500x750?text=No+Image' %>" alt="<%= movie.title %>">
			<div class="overlay">
				<h4><%= movie.title %></h4>
				<p>
					<%= movie.type === 'MOVIE' ? 'Movie' : 'TV Show' %> |
					<%= movie.release_date ? new Date(movie.release_date).getFullYear() : 'N/A' %>
				</p>
			</div>
		</div>
	<% }) %>
<% } else { %>
	<p>No media found.</p>
<% } %>
